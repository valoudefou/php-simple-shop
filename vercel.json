{
  "installCommand": "composer install --no-dev --optimize-autoloader",
  "functions": {
    "*.php": {
      "runtime": "vercel-php@0.6.2"
    }
  },
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.php)", "dest": "/$1" },
    { "src": "/(favicon\\.ico|robots\\.txt)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.php" }
  ]
}
