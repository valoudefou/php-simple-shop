{
  "installCommand": "composer install --no-dev --optimize-autoloader",
  "builds": [
    { "src": "*.php", "use": "@vercel/php" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.php)", "dest": "/$1" },
    { "src": "/(favicon\\.ico|robots\\.txt)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.php" }
  ]
}
